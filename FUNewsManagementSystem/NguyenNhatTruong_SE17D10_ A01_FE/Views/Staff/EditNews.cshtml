@model DataAccessObjects.DTO.NewsCreateDto
@{
    ViewData["Title"] = "Edit News";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cập nhật bài viết</h2>

@if (TempData["Error"] != null)
{
    <div style="color:red;">@TempData["Error"]</div>
}

<form method="post">
    <div>
        <label>Tiêu đề</label>
        <input asp-for="NewsTitle" />
    </div>
    <div>
        <label>Nội dung</label>
        <textarea asp-for="NewsContent"></textarea>
    </div>
    <div>
        <label>Chuyên mục ID</label>
        <input asp-for="CategoryId" />
    </div>
    <div>
        <label>Tag IDs</label>
        <input name="TagIds" value="@string.Join(",", Model.TagIds)" />
    </div>
    <input type="hidden" name="staffId" value="@Context.Session.GetInt32("UserId")" />
    <button type="submit">Lưu</button>
</form>